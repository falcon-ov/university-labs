<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.librarymanagement.entity.Category" table="category">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>
        <set name="books" table="book_category" inverse="true">
            <key column="category_id"/>
            <many-to-many column="book_id" class="com.example.librarymanagement.entity.Book"/>
        </set>
    </class>
</hibernate-mapping>