<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.librarymanagement.entity.Book" table="book">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="title" column="title"/>
        <many-to-one name="author" class="com.example.librarymanagement.entity.Author" column="author_id"/>
        <many-to-one name="publisher" class="com.example.librarymanagement.entity.Publisher" column="publisher_id"/>
        <many-to-one name="library" class="com.example.librarymanagement.entity.Library" column="library_id"/>
        <set name="categories" table="book_category" lazy="false"> <!-- Добавляем lazy="false" -->
            <key column="book_id"/>
            <many-to-many column="category_id" class="com.example.librarymanagement.entity.Category"/>
        </set>
    </class>
</hibernate-mapping>